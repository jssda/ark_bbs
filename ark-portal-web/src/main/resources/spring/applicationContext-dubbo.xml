<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo 
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 添加服务提供者的标志 -->
    <!--suppress UnparsedCustomBeanInspection -->
    <dubbo:application name="ark-portal-web-consumer"/>

    <!-- 指定注册中心 -->
    <!--suppress UnparsedCustomBeanInspection -->
    <dubbo:registry address="192.168.18.203:2181,192.168.18.203:2182,192.168.18.203:2183 " protocol="zookeeper"/>

    <!--  获得调用服务的远程代理对象	-->
    <!--suppress UnparsedCustomBeanInspection -->
    <dubbo:reference interface="pers.jssd.ark.rpc.service.TSectionService" id="sectionService"/>
    <dubbo:reference interface="pers.jssd.ark.rpc.service.TArticleService" id="articleService"/>
    <dubbo:reference interface="pers.jssd.ark.rpc.service.TUserInfoService" id="userInfoService"/>
    <dubbo:reference interface="pers.jssd.ark.rpc.service.TCommentService" id="commentService"/>
    <dubbo:reference interface="pers.jssd.ark.rpc.service.TMessageService" id="messageService"/>
    <!--suppress UnparsedCustomBeanInspection -->

</beans>